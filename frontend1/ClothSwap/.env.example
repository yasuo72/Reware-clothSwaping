# Environment variables required to run ClothSwap
# Rename this file to .env and update the values according to your setup

# Server listening port (default 5000)
PORT=5000

# PostgreSQL connection string (Drizzle ORM / connect-pg-simple)
# Format: postgres://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgres://postgres:postgres@localhost:5432/clothswap

# Session secret used by express-session (choose any long random string)
SESSION_SECRET=please_change_me

# Replit OIDC settings (not needed for local development).  
# If you are running locally you can leave the default dummy values below.
REPLIT_DOMAINS=localhost
REPL_ID=dummy

# Set to true ONLY if you want to enable Replit OIDC locally
USE_REPLIT_AUTH=false
# Optional: custom issuer URL. Leave commented for default.
# ISSUER_URL=https://replit.com/oidc
